<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/main_activity_bg_color">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="@dimen/form_margin_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/sign_up_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_mobile_no"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_edit_text"
            android:padding="@dimen/edit_text_padding"
            android:maxLength="@integer/mobile_no_max_length"
            android:maxLines="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textColorHint="@android:color/white"/>
        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_password"
            android:background="@drawable/bg_edit_text"
            android:textColor="@android:color/white"
            android:padding="@dimen/edit_text_padding"
            android:maxLength="@integer/mobile_no_max_length"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"/>
        <EditText
            android:id="@+id/sign_up_re_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_re_password"
            android:textColor="@android:color/white"
            android:padding="@dimen/edit_text_padding"
            android:maxLength="@integer/mobile_no_max_length"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:background="@drawable/bg_edit_text"/>

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_submit"
        android:minHeight="@dimen/button_min_height"
        android:background="@color/button_bg_color_selected"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/sign_up_hint_text_size"
        android:textAllCaps="false"/>


</RelativeLayout>